<Window x:Class="MakeConfigFile.MakeConfigFileForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Make Config File" Height="274.793" Width="525" SizeToContent="Height" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" HorizontalAlignment="Center" VerticalAlignment="Center" WindowStyle="ThreeDBorderWindow" TabIndex="0">

    <StackPanel   Margin="20,20,20,20">
        <TextBlock>Server</TextBlock>
        <TextBox Name="Server" TabIndex="1"/>
        <TextBlock>Database</TextBlock>
        <TextBox Name="Database" TabIndex="2"/>
        <CheckBox Name="IsWindows"  TabIndex="3" Content="Login with windows user" HorizontalAlignment="Right"   Width="478" Checked="IsWindows_Checked" Unchecked="IsWindows_Checked"></CheckBox>
        <TextBlock>Username</TextBlock>
        <TextBox Name="Username"  TabIndex="4"/>
        <TextBlock>Password</TextBlock>
        <TextBox Name="Password"  TabIndex="5"/>
        <Button Name="Save"   TabIndex="5" Click="Save_Click" IsDefault="True">Save</Button>
    </StackPanel>

</Window>
